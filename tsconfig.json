{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "exclude": ["dist"],
  "typedocOptions": {
    "mode": "file",
    "out": "./website/docs/api",
    "plugin": ["typedoc-plugin-markdown"],
    "exclude": [
      "**/reconciler/**",
      "**/utils/**",
      "**/components/**/index.ts",
      "**/components/config.ts",
      "demo.tsx",
      "index.ts"
    ],
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "includeDeclarations": true,
    "hideBreadcrumbs": true,
    "hideSources": true,
    "theme": "docusaurus2"
  }
}
